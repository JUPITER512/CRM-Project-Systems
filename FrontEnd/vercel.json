{
    "version": 2,
    "builds": [
      {
        "src": "src/**/*",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "dist"
        }
      }
    ],
    "rewrites": [
      {
        "source": "/api/(.*)",
        "destination": "https://crmsuite.onrender.com/api/$1"
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "/index.html"
      }
    ],
    "env": {
      "VITE_API_URL": "https://crmsuite.onrender.com/api"
    },
    "cache": {
      "static": {
        "maxAge": 31536000,
        "staleWhileRevalidate": 60
      }
    }
  }
  